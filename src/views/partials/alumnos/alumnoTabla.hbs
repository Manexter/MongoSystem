{{#if alumnos}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr class="text-center">
            <th>Num.</th>
            <th>Nombre</th>
            <th>Paterno</th>
            <th>Materno</th>
            <th>fechaNacimiento</th>
            <th>Sexo</th>
            <th>Celular</th>
            <th>Direccion</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each alumnos}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{paterno}}</td>
            <td>{{materno}}</td>
            <td>{{fechaNacimiento}}</td>
            <td>{{sexo}}</td>
            <td>{{celular}}</td>
            <td>{{direccion}}</td>
            <td>
                {{#if opcion}}
                <a href="/statusAlumnos/{{_id}}" class="btn btn-warning">No disponible</a>
                {{else}}
                <a href="/statusAlumnos/{{_id}}" class="btn btn-success">Disponible</a>
                {{/if}}
                <a href="/updateAlumnos/{{_id}}" class="btn btn-info">Actualizar</a>
                <a href="/deleteAlumnos/{{_id}}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h1>No hay alumnos</h1>
        <img src="/icons/rana.gif" class="w-75"/>
    </div>
</div>
{{/if}}