<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h4>AGREGAR ASIGNATURA</h4>
    <form action="/asignatura/agregar" method="POST">
        <div>
            <label for="nombre">Nombre de la asignatura:</label>
            <input type="text" name="nombre" placeholder="Nombre" id="nombre" 
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="creditos">Cantidad de creditos:</label>
            <input type="text" name="creditos" placeholder="Creditos" id="creditos"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="horas">Horas requeridas:</label>
            <input type="text" name="horas" placeholder="Horas" id="horas"
            class="form-control bg-dark text-white"/>
        </div>
        <button class="btn btn-success btn-sm mt-2">Agregar</button>
    </form>
</div>
