{{#if asignaturas}}
<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr class="text-center">
            <th>Num.</th>
            <th>Nombre</th>
            <th>Creditos</th>
            <th>Horas</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each asignaturas}}
        <tr>
            <td>{{@index}}</td>
            <td>{{nombre}}</td>
            <td>{{creditos}}</td>
            <td>{{horas}}</td>
            <td>
                {{#if opcion}}
                <a href="/statusAsignaturas/{{_id}}" class="btn btn-warning">No disponible</a>
                {{else}}
                <a href="/statusAsignaturas/{{_id}}" class="btn btn-success">Disponible</a>
                {{/if}}
                <a href="/updateAsignaturas/{{_id}}" class="btn btn-info">Actualizar</a>
                <a href="/deleteAsignaturas/{{_id}}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h1>No hay asignaturas</h1>
        <img src="/icons/rana.gif" class="w-75"/>
    </div>
</div>
{{/if}}