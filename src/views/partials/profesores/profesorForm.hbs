<div class="card card-body p-4 rounded-0 bg-dark text-white">
    <h4>AGREGAR PROFESOR</h4>
    <form action="/profesor/agregar" method="POST">
        <div>
            <label for="rfc">RFC:</label>
            <input type="text" name="rfc" placeholder="Rfc" id="rfc"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="nombre">Nombre(s):</label>
            <input type="text" name="nombre" placeholder="Nombre" id="nombre"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="paterno">Apellido paterno:</label>
            <input type="text" name="paterno" placeholder="Paterno" id="paterno"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="materno">Apellido materno:</label>
            <input type="text" name="materno" placeholder="Materno" id="materno"
            class="form-control bg-dark text-white"/>
        </div>
    
        <div>
            <label for="fechaNacimiento">Fecha nacimiento:</label>
            <input type="date" name="fechaNacimiento" id="fechaNacimiento"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="direccion">Direccion:</label>
            <textarea name="direccion" placeholder="Direccion"
            class="form-control bg-dark text-white"></textarea>
        </div>

        <div>
            <label for="celular">Numero celular:</label>
            <input type="text" name="celular" placeholder="Celular" id="celular"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="profesion">Profesion:</label>
            <input type="text" name="profesion" placeholder="Profesion" id="profesion"
            class="form-control bg-dark text-white"/>
        </div>

        <div>
            <label for="numeroEmpleado">Numero de empleado:</label>
            <input type="numeroEmpleado" name="numeroEmpleado" placeholder="NumeroEmpleado" id="numeroEmpleado"
            class="form-control bg-dark text-white"/>
        </div>

        <button class="btn btn-success btn-sm mt-2">Agregar</button> 
    </form>
</div>

